@model ArticleResponse

@{
    ViewData["Title"] = Model.PageTitle;
}









<h2 class="h2 m-3">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16">
        <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41m-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9" />
        <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5 5 0 0 0 8 3M3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9z" />
    </svg>
    Update Article
</h2>

<div class="container">

    <form method="post" asp-action="DeleteTheArticle" asp-controller="Articles">

        <div class="mb-3 ">
            <label for="Heading" class="form-label">Heading: </label>
            <input type="text" asp-for="Heading" id="Heading" class="form-control" value="@Model.Heading" disabled/>
        </div>

        <div class="mb-3">
            <label for="PageTitle" class="form-label">Page Title: </label>
            <input type="text" asp-for="PageTitle" id="PageTitle" class="form-control" value="@Model.PageTitle" disabled />
        </div>

        <div class="mb-3">
            <label for="Content" class="form-label">Content: </label>
            <textarea  disabled asp-for="Contnet" id="Content" class="form-control">@Model.Contnet </textarea>
        </div>

        <div class="mb-3">
            <label for="ShortDescription" class="form-label">Short Description: </label>
            <input disabled type="text" asp-for="ShortDescription" id="ShortDescription" class="form-control" value="@Model.ShortDescription" />
        </div>



        <input type="hidden" asp-for="@Model.ArticleId">


        <div class="mb-3 form-check">
            @if (Model.Visible == true)
            {
                <input disabled class="form-check-input" type="checkbox" value="true" id="visible" asp-for="Visible" checked>
            }
            else
            {
                <input disabled class="form-check-input" type="checkbox" value="true" id="visible" asp-for="Visible">
            }
            <label class="form-check-label" for="visible">
                Visible
            </label>
        </div>
   
        <div class="mb-3">
            <input class="btn btn-danger" type="submit" value="Delete It">
        </div>


    </form>
    @{
        Model.SelectedTags = ViewBag.TagsOnArticle;
    }
</div>