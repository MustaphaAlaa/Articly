@model List<ArticleResponse>

    <div class="container">




    <h1 class="m-3 mt-4 text-center">All Articles</h1>



    <div class="container  mt-5">

        <table class="table table-bordered table-striped  ">
            <thead>
                <tr>

                    <th>Heading</th>
                    <th>Tags</th>
                    <th>Options</th>
                </tr>

            </thead>
            <tbody>
                @foreach (ArticleResponse art in Model)
                {
                    <tr>

                        <td>
                            <a asp-action="GetArticle" asp-controller="Articles" asp-route-id="@art.ArticleId"
                               class="link-primary">

                                @art.Heading

                            </a>
                        </td>
                        <td>
                            @if (art.Tags == null || art.Tags.Count == 0)
                            {
                                <span>No Tags In This Article</span>
                            }
                            else
                            {
                                @foreach (var tag in art.Tags)
                                {
                                    <span class="badge bg-success">@tag?.DisplayName</span>
                                }
                            }
                        </td>

                        <td><a class="btn btn-warning" asp-action="EditArticle" asp-controller="Articles" asp-route-id="@art.ArticleId"> Edit</a></td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

    </div>