@model Tag;

@{
    ViewData["Title"] = "Add Tag";
}

<h2 class="h2 ">
    <i class="bi bi-plus-circle"></i>
    Add Tag
</h2>

<div class="container mt-4">
<form method="post" asp-controller="admintags" asp-action="addtag">
    <div class=" form-group mt-2">
        <label  for="TagName">Name</label>
        <input asp-for="Name" id="TagName" class="form-control mt-1" type="text"  />
    </div>
    <div class=" form-group mt-2">
        <label  for="DisplayName">Dispaly Name</label>
        <input asp-for="DisplayName" id="DisplayName" class="form-control mt-1" type="text" />
    </div>
        
    <input type="submit" class="btn btn-dark mt-3" />

</form>
</div>
